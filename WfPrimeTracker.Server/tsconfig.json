{
  "include": ["./ClientApp/**/*", "vue-shims.d.ts"],
  "compilerOptions": {
    "strict": true,
    "target": "es5",
    "sourceMap": true,
    "module": "esnext",
    "noImplicitAny": true,
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": false,
    "skipDefaultLibCheck": true,
    "types": ["node"],
    "typeRoots": [
      "node_modules/@types"
    ],
    "lib": ["es2016", "dom"],
    "outDir": "JsFiles",
    "baseUrl": ".",
    "paths": {
      "@/*": ["ClientApp/*"]
    }
  },
  "exclude": ["bin", "node_modules"]
}
